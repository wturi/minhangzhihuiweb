    .input-group {
        margin-bottom: 2em;
    }
</style>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <table class="table table-hover table-bordered" id="table">
            <tr>
                <th>营业收入记账日</th>
                <th>营业额</th>
                <th>操作人</th>
                <th>所属业主</th>
                <th>更新时间</th>
            </tr>
