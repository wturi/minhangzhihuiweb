            <div class="pull-right hidden-xs"> <b>Version</b>
                2.0
            </div> <strong>Copyright &copy; 2014-2015
                <a href="http://almsaeedstudio.com">Almsaeed Studio</a>
                .</strong>
            All rights reserved.
        </footer>
        -->
        <!--右侧弹出层-->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Create the tabs -->
            <ul class="nav nav-tabs nav-justified control-sidebar-tabs">
                <li class="active">
                    <a href="#control-sidebar-home-tab" data-toggle="tab">
                        @*
                            <i class="fa fa-home"></i>
                        *@资料修改
                    </a>
                </li>

                <li>
                    <a href="#control-sidebar-settings-tab" data-toggle="tab">
                        修改密码
                    </a>
                </li>
            </ul>
            <!-- Tab panes -->
            <div class="tab-content">
                <!-- Home tab content -->
                <div class="tab-pane active" id="control-sidebar-home-tab">
                    <div class="row">
                        <div class="col-xs-12" id="ziliao">
                            @{
                                if (MinHangWisdomParkWeb.GlobalParameter.UserId != null)
                                {
                                    MinHangWisdomParkWeb.Models.tbPeople people = (MinHangWisdomParkWeb.Helps.MyPeopleSelect(MinHangWisdomParkWeb.GlobalParameter.UserId)) != null ? (MinHangWisdomParkWeb.Helps.MyPeopleSelect(MinHangWisdomParkWeb.GlobalParameter.UserId)) : (new MinHangWisdomParkWeb.Models.tbPeople());
                                    <input type="hidden" id="PeopleId" value="@people.PeopleID" />
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">姓名</label>
                                        <input type="text" class="form-control" id="exampleInputName" value="@people.PeopleName">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">性别</label>
                                        <input type="text" class="form-control" id="exampleInputSexy" value="@people.Sexy">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">手机号</label>
                                        <input type="text" class="form-control" id="exampleInputPhone" value="@people.PhoneNum">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">邮箱</label>
