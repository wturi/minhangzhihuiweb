                            <a href="#" class="btn btn-danger btn-flat" data-toggle="control-sidebar" style="margin-left: 1em;" id="querenxiugai">确认修改</a>
                        </div>
                    </div>
                </div>
                <!-- /.tab-pane -->
                <!-- Stats tab content -->
                <div class="tab-pane" id="control-sidebar-stats-tab">Stats Tab Content</div>
                <!-- /.tab-pane -->
                <!-- Settings tab content -->
                <div class="tab-pane" id="control-sidebar-settings-tab">
                    <div class="row">
                        <div class="col-xs-12" id="mima">
                            <div class="form-group">
                                <label for="exampleInputEmail1">原始密码</label>
                                <input type="password" class="form-control" id="mima1" value="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">新密码</label>
                                <input type="password" class="form-control" id="mima2" value="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">再次输入新密码</label>
                                <input type="password" class="form-control" id="mima3" value="">
                            </div>
                        </div>
                        <div class="text-center">
                            <a href="#" class="btn btn-info btn-flat" data-toggle="control-sidebar" id="quxiaoxiugaimima">取消修改</a>
                            <a href="#" class="btn btn-danger btn-flat" style="margin-left: 1em;" id="querenxiugaimima">确认修改</a>
                        </div>
                        <div class="text-center" id="mimamsg">
                            <h3 style="color:red;" id="msg"></h3>
                        </div>
                    </div>
                </div>
                <!-- /.tab-pane -->
            </div>
        </aside>
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
             immediately after the control sidebar -->
        <div class='control-sidebar-bg'></div>
    </div>
    <input type="hidden" id="username" name="name" value="@MinHangWisdomParkWeb.GlobalParameter.UserName" />
</body>
</html>

<script type="text/javascript">

    $(function () {
        var peoplename = $('#exampleInputName').val();
        if (peoplename == null || peoplename == '') {
            $('.peoplename1').text($('#username').val());
        } else {
            $('.peoplename1').text(peoplename);
        }
        //$(".wrapper").css("height", $(window).height() + "px");
    })


    $('#quxiaoxiugai').click(function () {
        $("#ziliao").load(location.href + " #ziliao>*", "");
    })
    $('#quxiaoxiugaimima').click(function () {
        $("#mima").load(location.href + " #mima>*", "");
    })
    $('#querenxiugai').click(function () {
        var Id = $('#PeopleId').val();
        var Name = $('#exampleInputName').val();
        var Sexy = $('#exampleInputSexy').val();
        var Phone = $('#exampleInputPhone').val();
        var Email1 = $('#exampleInputEmail1').val();

        $.post("@Url.Content("~/Main/MyPeopleUpdateAjax/")", { Id: Id, Name: Name, Sexy: Sexy, Phone: Phone, Email: Email1 }, function (data, status) {
            if (status == 'success') {
                $('.peoplename1').text(Name);
                alert("修改成功!");
            }
        })
    })

    $('#querenxiugaimima').click(function () {
        var oldpwd = $('#mima1').val();
        var newpwd = $('#mima2').val();
        var newpwd2 = $('#mima3').val();


        if (newpwd != newpwd2) {
            $('#msg').text("两次新密码输入不相同！");
            return false;
        }
        $.post("@Url.Content("~/Main/MyPwdUpdateAjax/")", { oldpwd: oldpwd, newpwd: newpwd }, function (data, status) {
            if (status == 'success') {
                $('#msg').text(data.msg);

                setTimeout(function () {
                    $('#quxiaoxiugaimima').click();
                    $("#mima").load(location.href + " #mima>*", "");
                    $("#mimamsg").load(location.href + " #mimamsg>*", "");
                }, 2000);
            }
        })

    })
</script>