                                    </div>
                                </li>
                            </ul>
                        </li>
                        @*
                            <li>
                            <a href="#" data-toggle="control-sidebar"> <i class="fa fa-gears"></i>
                            </a>
                            </li>
                        *@
                    </ul>
                </div>
            </nav>
        </header>
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image" />
                    </div>
                    <div class="pull-left info">
                        <p class="peoplename1">@*@MinHangWisdomParkWeb.GlobalParameter.UserName*@</p>

                        <a href="#">
                            <i class="fa fa-circle text-success"></i>
                            在线
                        </a>
                    </div>
                </div>
                <ul class="sidebar-menu" id="main">
                    @{
                        foreach (MinHangWisdomParkWeb.Controllers.JurisdictionController.ActorsLists i in MinHangWisdomParkWeb.Helps.ActorPower(MinHangWisdomParkWeb.GlobalParameter.Actorid))
                        {
                            if (i.ischecked == true && i.Type != "Phone")
                            {
                                if (i.FunctionName == @ViewBag.lujin)
                                {
                                    <li class="treeview active open">
                                        <a href="#">
                                            <i class="fa fa-dashboard"></i>
                                            <span>@i.FunctionName</span>
                                            <i class="fa fa-angle-left pull-right"></i>
                                        </a>
                                        <ul class="treeview-menu">
                                            @foreach (var a in i.List)
                                            {
                                                if (a.ischecked == true)
                                                {
                                                    if (a.FunctionName == @ViewBag.Title)
                                                    {
                                                        <li class="active">
                                                            <a href="/@a.Type&Type=@a.FunctionName&Title=@a.FunctionName&lujin=@i.FunctionName">
                                                                <i class="fa fa-circle-o"></i>
                                                                @a.FunctionName
                                                            </a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <a href="/@a.Type&Type=@a.FunctionName&Title=@a.FunctionName&lujin=@i.FunctionName">
                                                                <i class="fa fa-circle-o"></i>
                                                                @a.FunctionName
                                                            </a>
                                                        </li>
                                                    }
                                                }

                                            }
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li class="treeview ">
                                        <a href="#">
                                            <i class="fa fa-dashboard"></i>
                                            <span>@i.FunctionName</span>
                                            <i class="fa fa-angle-left pull-right"></i>
                                        </a>
                                        <ul class="treeview-menu">
                                            @foreach (var a in i.List)
                                            {
                                                if (a.ischecked == true)
                                                {
                                                    if (a.FunctionName == @ViewBag.Title)
                                                    {
                                                        <li class="active">
                                                            <a href="/@a.Type&Type=@a.FunctionName&Title=@a.FunctionName&lujin=@i.FunctionName">
                                                                <i class="fa fa-circle-o"></i>
                                                                @a.FunctionName
                                                            </a>
                                                        </li>
                                                    }
                                                    else
                                                    {
                                                        <li>
                                                            <a href="/@a.Type&Type=@a.FunctionName&Title=@a.FunctionName&lujin=@i.FunctionName">
                                                                <i class="fa fa-circle-o"></i>
                                                                @a.FunctionName
                                                            </a>
                                                        </li>
                                                    }
                                                }
                                            }
                                        </ul>
                                    </li>
                                }
                            }
                        }
                    }
                </ul>
            </section>
            <!-- /.sidebar -->
