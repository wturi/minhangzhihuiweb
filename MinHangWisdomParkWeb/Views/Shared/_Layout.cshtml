                                    @*
                                        <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat">Profile</a>
                                        </div>
                                    *@
                                    <div class="pull-left">
                                        <a href="#" class="btn btn-default btn-flat" id="bianjiziliao" data-toggle="control-sidebar">编辑资料</a>
                                    </div>
                                    <div class="pull-right">
