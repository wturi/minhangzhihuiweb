        <div class="content-wrapper">
            <!-- Content Wrapper. Contains page content -->
            <!-- Content Header (Page header) -->
            <section class="content-header text-center"></section>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    <ol class="breadcrumb">
                        <li>
                            <a>@ViewBag.lujin</a>
                        </li>
                        <li class="active">@ViewBag.Title</li>
                    </ol>
                </div>
                <div class="col-md-2"></div>
            </div>
            @RenderBody()
