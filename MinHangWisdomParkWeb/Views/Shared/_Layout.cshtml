<body class="skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a href="@Url.Action("huanyingshiyong","Main")" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
