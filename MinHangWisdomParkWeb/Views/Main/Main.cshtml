@{
    Layout = "~/Views/Shared/_ch.cshtml";
}
<link href="~/Styles/gundong.css" rel="stylesheet" />
<link href="~/Styles/MainCss.css" rel="stylesheet" />
<div class="bodymain">
    <div class="bodytitle">
        <a href="#" class="pull-left"><img src="@Url.Content(MinHangWisdomParkWeb.GlobalParameter.LogoUrl)" /></a>
        <div class="bodytitletab pull-left">
            <a href="#">首页</a>
            <a href="@Url.Content("~/main/TypeContent?TypeName=新闻")">新闻</a>
            <a href="@Url.Content("~/main/TypeContent?TypeName=公告")">公告</a>
            <a href="@Url.Content("~/main/TypeContent?TypeName=政策")">政策</a>
            <a href="@Url.Content("~/main/TypeContent?TypeName=企业")">企业</a>
            <a href="http://139.196.36.201:8001/">网络社区</a>
        </div>
    </div>

    <div class="bodycontent">
        <div class="bodyimg pull-left">
            <div class="pull-left V-title">
                <b>上海市莘庄工业区西区</b>
            </div>
            <div id="carousel-example-generic" class="carousel slide pull-left" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="~/img/Main/ShowImg/1.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/img/Main/ShowImg/2.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/img/Main/ShowImg/3.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/img/Main/ShowImg/4.jpg" />
                        <div class="carousel-caption">
                        </div>
                    </div>
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="bodyguanggaotab pull-left">
            <div class="tabdiv">
                <!-- Nav tabs -->
                <ul class="nav nav-tabs" role="tablist">
                    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">公告信息</a></li>
                    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">入驻企业信息</a></li>
                    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">政策信息</a></li>
                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    <div role="tabpanel" class="tab-pane active" id="home">
                        <ul class="list-group">
                            @if (ViewBag.gonggao != null)
                            {
                                foreach (MinHangWisdomParkWeb.Models.tbPeblish i in ViewBag.gonggao as List<MinHangWisdomParkWeb.Models.tbPeblish>)
                                {
                            <li class="list-group-item">
                                <span class="badge">@i.CreateTime</span>
                                <a href="TextContent?TypeName=公告&PeblishID=@i.PeblishID">@i.PeblishTitle</a>
                            </li>
                                }
                            }
                        </ul>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="profile">
                        <ul class="list-group">
                            @if (ViewBag.qiye != null)
                            {
                                foreach (MinHangWisdomParkWeb.Models.tbPeblish i in ViewBag.qiye as List<MinHangWisdomParkWeb.Models.tbPeblish>)
                                {
                            <li class="list-group-item">
                                <span class="badge">@i.CreateTime</span>
                                <a href="TextContent?TypeName=企业&PeblishID=@i.PeblishID">@i.PeblishTitle</a>
                            </li>
                                }
                            }
                        </ul>
                    </div>
                    <div role="tabpanel" class="tab-pane" id="messages">
                        <ul class="list-group">
                            @if (ViewBag.zhengce != null)
                            {
                                foreach (MinHangWisdomParkWeb.Models.tbPeblish i in ViewBag.zhengce as List<MinHangWisdomParkWeb.Models.tbPeblish>)
                                {
                            <li class="list-group-item">
                                <span class="badge">@i.CreateTime</span>
                                <a href="TextContent?TypeName=政策&PeblishID=@i.PeblishID">@i.PeblishTitle</a>
                            </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
            </div>


            <!-- 招商广告-->
            <div>
                <p>招商  广告</p>
                <div id="carousel-example-generic1" class="carousel slide" data-ride="carousel">

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        @if (ViewBag.guanggao != null)
                        {
                            int a = 0;
                            foreach (MinHangWisdomParkWeb.Controllers.guanggao i in ViewBag.guanggao as List<MinHangWisdomParkWeb.Controllers.guanggao>)
                            {
                                if (a == 0)
                                {
                                    <div class="item active">
                                        <a href="@i.httpurl"><img src="@i.imgurl" /></a>
                                    </div>
                                }
                                else
                                {
                                    <div class="item">
                                        <a href="@i.httpurl"><img src="@i.imgurl" /></a>
                                    </div>
                                }
                                a++;
                            }
                        }

                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic1" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic1" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>


        </div>
        <div class="bodydenglu pull-left">
            <div>
                <p style="font-size:1.5em;font-weight:900;">登录  窗口</p>
                <small>为了更好的数字文化体验，</small><br />
                <small>介绍网页的视觉尝试体位，</small><br />
                <a type="button" class="btn btn-primary btn-sm" style="margin-top:1em;" href="/Main/login">点击登录</a><br />
                <img src="~/img/Main/7.png" style="width:100%;" />
            </div>
            <div style="margin-top:3em;">
                <div class="box3">
                    <div class="border3">
                        @{
                            if (ViewBag.NewsList != null)
                            {
                                foreach (MinHangWisdomParkWeb.Models.tbPeblish news in ViewBag.NewsList as List<MinHangWisdomParkWeb.Models.tbPeblish>)
                                {
                                    <div class="list-group-item">
                                        <span class="badge"></span>
                                        <a href="TextContent?TypeName=新闻&PeblishID=@news.PeblishID">@news.PeblishTitle </a>
                                    </div>
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="bodyfoot">
        Copyright © 2014-2015 Almsaeed Studio. All rights reserved.
    </div>
</div>
<script type="text/javascript">

    var num = 0;//上滚距离
    var n = 0; //新闻重复数据条数  到10重置为0
    var titles;   //新闻标题 10条
    var urls = {}; //新闻URL  10条

    //左边图片
    $('#carousel-example-generic').carousel({
        interval: 3000
    })
    //招商广告
    $('#carousel-example-generic1').carousel({
        interval: 10000
    })

    $(document).ready(function () {
        Title();//提取新闻数据   10条
        setInterval(gundong, 2000);//新闻滚动间隔
    })



    //初始化数据
    function Title() {
        titles = $.trim($('.border3').find("a").text()).split(' ');
        var i = 0;
        $('.border3').find('a').each(function () {
            urls[i] = $(this).attr('href');
            i++;
        })
        //alert(urls[10]);
        //alert(mm[10])
    }

    //新闻列表滚动
    function gundong() {
        if ($(".border3").css("animation-play-state") != "paused") {//判断是否上滚
            $(".border3").css("-webkit-transform", "translate(0,-" + num + "em)"); num += 2.93;//上滚距离
            if (n >= 10) n = 0; $(".border3").append('<div class="list-group-item"><span class="badge"></span><a href="' + urls[n] + '">' + titles[n] + '</div>'); n++;//添加重复数据到队列下方
        }
    }


</script>
